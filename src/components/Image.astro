---
export interface Props {
  src: string;
  alt: string;
  class?: string;
  width?: string;
  height?: string;
  loading?: 'lazy' | 'eager';
}

const { src, alt, class: className, width, height, loading = 'lazy' } = Astro.props;

// Add base path to image src if it starts with /
const imageSrc = src.startsWith('/') ? `${import.meta.env.BASE_URL}${src.slice(1)}` : src;
---

<img
  src={imageSrc}
  alt={alt}
  class={className}
  width={width}
  height={height}
  loading={loading}
/>