---
import { addBasePath } from '../utils/paths';

export interface Props {
  src: string;
  alt: string;
  class?: string;
  width?: string;
  height?: string;
  loading?: 'lazy' | 'eager';
}

const { src, alt, class: className, width, height, loading = 'lazy' } = Astro.props;

// Use the centralized path handling utility
const imageSrc = addBasePath(src);
---

<img
  src={imageSrc}
  alt={alt}
  class={className}
  width={width}
  height={height}
  loading={loading}
/>