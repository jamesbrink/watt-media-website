---
export interface Props {
  href: string;
  class?: string;
  [key: string]: any;
}

const { href, class: className, ...rest } = Astro.props;

// Add base path to href if it starts with /
const linkHref = href.startsWith('/') ? `${import.meta.env.BASE_URL}${href.slice(1)}` : href;
---

<a href={linkHref} class={className} {...rest}>
  <slot />
</a>