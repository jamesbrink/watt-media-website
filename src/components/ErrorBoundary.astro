---
export interface Props {
  fallback?: string;
  className?: string;
}

const { 
  fallback = "Something went wrong. Please try refreshing the page.",
  className = "bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-md"
} = Astro.props;
---

<div class={className} role="alert">
  <h3 class="font-semibold mb-2">Error</h3>
  <p>{fallback}</p>
  <button 
    onclick="window.location.reload()" 
    class="mt-2 px-3 py-1 bg-red-600 text-white rounded text-sm hover:bg-red-700"
  >
    Refresh Page
  </button>
</div>