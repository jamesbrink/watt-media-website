---
import MainLayout from '../layouts/MainLayout.astro';
import Link from '../components/Link.astro';
import Image from '../components/Image.astro';
---

<MainLayout
  title="Social Media Design - Watt Media"
  description="Stand out in the digital world with eye-catching social content"
  keywords="social media design, graphics, templates, animations, instagram, facebook, social media content"
>
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-watt-yellow to-yellow-300 py-16">
    <div class="max-w-7xl mx-auto section-padding text-center">
      <h1 class="text-4xl md:text-5xl font-bold font-quantico text-gray-800 mb-4">
        Social Media Design
      </h1>
      <p class="text-xl text-gray-700 max-w-3xl mx-auto">
        Stand out in the digital world with eye-catching social content
      </p>
    </div>
  </section>

  <!-- Service Content -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto section-padding">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Content -->
        <div>
          <div class="prose prose-lg max-w-none">
            <p class="text-lg text-gray-600 mb-8">
              We offer the following services in Social Media Design:
            </p>
          </div>

          <!-- Social Media Graphics -->
          <div class="service-detail-card mb-8">
            <div class="flex items-start">
              <div class="bg-watt-yellow rounded-lg p-3 mr-4">
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold font-quantico text-gray-800 mb-3">
                  Social Media Graphics
                </h3>
                <p class="text-gray-600 mb-4">
                  Social media is an important part of running a business in the modern world. We
                  can help create eye catching social media graphics, so your business gets
                  noticed online in this highly competitive digital world we now live in.
                </p>
                <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                  <div class="flex justify-between items-center">
                    <div>
                      <span class="font-semibold block">Basic Static Post</span>
                      <span class="text-sm text-gray-600">Quote graphics, announcements</span>
                    </div>
                    <span class="text-xl font-bold text-gray-800">$55 AUD (including GST)</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <div>
                      <span class="font-semibold block">Detailed Static Post</span>
                      <span class="text-sm text-gray-600"
                        >Infographics, multi-layered designs</span
                      >
                    </div>
                    <span class="text-xl font-bold text-gray-800">$88-$110 AUD (including GST)</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Media Content Packages -->
          <div class="service-detail-card mb-8">
            <div class="flex items-start">
              <div class="bg-watt-yellow rounded-lg p-3 mr-4">
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                  ></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold font-quantico text-gray-800 mb-3">
                  Social Media Content Packages
                </h3>
                <p class="text-gray-600 mb-4">
                  Do you need a Social Media Template, Graphics for Key Themes, Icon Sets, Branded
                  Animations, Social Media Profile and Cover Photos, Video Bumpers and End Cards,
                  Highlight Covers for Instagram/Facebook? We can produce these high-quality
                  assets.
                </p>
                <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                  <div class="flex justify-between items-center">
                    <span class="font-semibold">Template Pack</span>
                    <span class="text-xl font-bold text-gray-800">$330-$550 AUD (including GST)</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="font-semibold">Branded Animations</span>
                    <span class="text-xl font-bold text-gray-800">$220-$440 AUD (including GST)</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="font-semibold">Profile & Cover Photos</span>
                    <span class="text-xl font-bold text-gray-800">$110-$220 AUD (including GST)</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="font-semibold">Highlight Covers (Set of 5)</span>
                    <span class="text-xl font-bold text-gray-800">$110-$165 AUD (including GST)</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- What's Included -->
          <div class="bg-gray-100 rounded-xl p-6 mb-8">
            <h4 class="text-lg font-bold font-quantico text-gray-800 mb-4">
              Content Package Includes:
            </h4>
            <div class="grid grid-cols-2 gap-3">
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>Social Media Templates</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>Graphics for Key Themes</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>Icon Sets</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>Video Bumpers</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>End Cards</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>Instagram/FB Highlights</span>
              </div>
            </div>
          </div>

          <!-- CTA -->
          <div class="bg-gray-100 rounded-xl p-8 text-center">
            <p class="text-lg text-gray-700 mb-6">
              Get in touch with us today to see how we can help your business.
            </p>
            <Link href="/contact" class="btn-primary inline-block">
              Boost Your Social Presence
            </Link>
          </div>
        </div>

        <!-- Image -->
        <div class="lg:sticky lg:top-28">
          <div class="bg-white rounded-2xl shadow-xl p-8">
            <Image
              src="/images/social-media-design.svg"
              alt="Social Media Design Services"
              class="w-full h-auto"
            />
          </div>

          <!-- Platform Icons -->
          <div class="mt-8 grid grid-cols-4 gap-4">
            <div class="bg-white rounded-lg shadow p-4 text-center">
              <svg class="w-8 h-8 mx-auto text-gray-700" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                />
              </svg>
            </div>
            <div class="bg-white rounded-lg shadow p-4 text-center">
              <svg class="w-8 h-8 mx-auto text-gray-700" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"
                />
              </svg>
            </div>
            <div class="bg-white rounded-lg shadow p-4 text-center">
              <svg class="w-8 h-8 mx-auto text-gray-700" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                />
              </svg>
            </div>
            <div class="bg-white rounded-lg shadow p-4 text-center">
              <svg class="w-8 h-8 mx-auto text-gray-700" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Services -->
  <section class="py-16 bg-gray-100">
    <div class="max-w-7xl mx-auto section-padding">
      <h2 class="text-3xl font-bold font-quantico text-center text-gray-800 mb-12">
        Related Services
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <Link href="/branding-identity" class="card hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-bold font-quantico mb-3">Branding & Identity</h3>
          <p class="text-gray-600">Build a strong brand that stands out</p>
        </Link>
        <Link href="/visual-content-creation" class="card hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-bold font-quantico mb-3">Visual Content Creation</h3>
          <p class="text-gray-600">Stunning visuals that tell your story</p>
        </Link>
        <Link href="/audio-services" class="card hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-bold font-quantico mb-3">Audio Services</h3>
          <p class="text-gray-600">Professional audio for your content</p>
        </Link>
      </div>
    </div>
  </section>
</MainLayout>