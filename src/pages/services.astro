---
import MainLayout from '../layouts/MainLayout.astro';
import Link from '../components/Link.astro';
---

<MainLayout
  title="Design Services - Watt Media | Bass Coast Graphic Design"
  description="Complete design services in Bass Coast: Logo design, branding, print materials, social media graphics, photography, and video production. Serving Wonthaggi, Inverloch, Cowes and surrounding areas."
  keywords="design services Bass Coast, graphic design Wonthaggi, branding services Inverloch, print design services Cowes, social media design Victoria, photography services Gippsland"
>
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-watt-yellow to-yellow-300 py-16">
    <div class="max-w-7xl mx-auto section-padding text-center">
      <h1 class="text-4xl md:text-5xl font-bold font-quantico text-gray-800 mb-4">
        Our Services
      </h1>
      <p class="text-xl text-gray-700 max-w-3xl mx-auto">
        Comprehensive graphic design and multimedia solutions to elevate your brand
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto section-padding">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Branding & Identity -->
        <Link href="/branding-identity" class="group">
          <div
            class="card h-full hover:border-watt-yellow hover:border-2 transition-all duration-300"
          >
            <div class="w-full h-48 mb-6 rounded-lg overflow-hidden bg-gray-100">
              <img
                src="/images/branding-identity-website-image.svg"
                alt="Branding & Identity"
                class="w-full h-full object-contain p-4 group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <h3
              class="text-2xl font-bold font-quantico mb-3 group-hover:text-watt-yellow transition-colors"
            >
              Branding & Identity Design
            </h3>
            <p class="text-gray-600 mb-4">
              Complete brand identity packages including logos, business cards, letterheads, and
              brand guidelines.
            </p>
            <p class="text-watt-yellow font-semibold">Starting from $200 AUD</p>
          </div>
        </Link>

        <!-- Print & Marketing -->
        <Link href="/print-marketing-design" class="group">
          <div
            class="card h-full hover:border-watt-yellow hover:border-2 transition-all duration-300"
          >
            <div class="w-full h-48 mb-6 rounded-lg overflow-hidden bg-gray-100">
              <img
                src="/images/print-marketing-design-website-image.svg"
                alt="Print & Marketing Design"
                class="w-full h-full object-contain p-4 group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <h3
              class="text-2xl font-bold font-quantico mb-3 group-hover:text-watt-yellow transition-colors"
            >
              Print & Marketing Design
            </h3>
            <p class="text-gray-600 mb-4">
              Professional brochures, flyers, posters, and marketing materials that capture
              attention.
            </p>
            <p class="text-watt-yellow font-semibold">Starting from $150 AUD</p>
          </div>
        </Link>

        <!-- Social Media Design -->
        <Link href="/social-media-design" class="group">
          <div
            class="card h-full hover:border-watt-yellow hover:border-2 transition-all duration-300"
          >
            <div class="w-full h-48 mb-6 rounded-lg overflow-hidden bg-gray-100">
              <img
                src="/images/social-media-design.svg"
                alt="Social Media Design"
                class="w-full h-full object-contain p-4 group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <h3
              class="text-2xl font-bold font-quantico mb-3 group-hover:text-watt-yellow transition-colors"
            >
              Social Media Design
            </h3>
            <p class="text-gray-600 mb-4">
              Eye-catching social media graphics and content packages for all platforms.
            </p>
            <p class="text-watt-yellow font-semibold">Starting from $50 AUD</p>
          </div>
        </Link>

        <!-- Visual Content Creation -->
        <Link href="/visual-content-creation" class="group">
          <div
            class="card h-full hover:border-watt-yellow hover:border-2 transition-all duration-300"
          >
            <div class="w-full h-48 mb-6 rounded-lg overflow-hidden bg-gray-100">
              <img
                src="/images/visual-content-creation.svg"
                alt="Visual Content Creation"
                class="w-full h-full object-contain p-4 group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <h3
              class="text-2xl font-bold font-quantico mb-3 group-hover:text-watt-yellow transition-colors"
            >
              Visual Content Creation
            </h3>
            <p class="text-gray-600 mb-4">
              Photography, photo editing, video production, and visual storytelling.
            </p>
            <p class="text-watt-yellow font-semibold">Starting from $100 AUD</p>
          </div>
        </Link>

        <!-- Audio Services -->
        <Link href="/audio-services" class="group">
          <div
            class="card h-full hover:border-watt-yellow hover:border-2 transition-all duration-300"
          >
            <div class="w-full h-48 mb-6 rounded-lg overflow-hidden bg-gray-100">
              <img
                src="/images/audio-production-website-image.svg"
                alt="Audio Production"
                class="w-full h-full object-contain p-4 group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <h3
              class="text-2xl font-bold font-quantico mb-3 group-hover:text-watt-yellow transition-colors"
            >
              Audio Production
            </h3>
            <p class="text-gray-600 mb-4">
              Podcast editing, music production, voiceovers, and audio branding.
            </p>
            <p class="text-watt-yellow font-semibold">Starting from $100 AUD</p>
          </div>
        </Link>

        <!-- Custom Solutions -->
        <div
          class="card h-full bg-gradient-to-br from-gray-50 to-gray-100 border-2 border-dashed border-gray-300"
        >
          <div class="flex items-center justify-center h-48 mb-6">
            <svg
              class="w-24 h-24 text-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6v6m0 0v6m0-6h6m-6 0H6"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold font-quantico mb-3 text-gray-700">Custom Solutions</h3>
          <p class="text-gray-600 mb-4">
            Have a unique project in mind? Let's discuss your specific needs and create a custom
            solution.
          </p>
          <Link href="/contact" class="text-watt-yellow font-semibold hover:underline">
            Get in Touch â†’
          </Link>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 bg-gray-100">
    <div class="max-w-7xl mx-auto section-padding">
      <h2 class="text-3xl md:text-4xl font-bold font-quantico text-center text-gray-800 mb-12">
        Why Choose Watt Media?
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div
            class="bg-watt-yellow rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-10 h-10 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico mb-2">Quality First</h3>
          <p class="text-gray-600">Professional designs that exceed expectations</p>
        </div>
        <div class="text-center">
          <div
            class="bg-watt-yellow rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-10 h-10 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico mb-2">Fast Turnaround</h3>
          <p class="text-gray-600">Quick delivery without compromising quality</p>
        </div>
        <div class="text-center">
          <div
            class="bg-watt-yellow rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-10 h-10 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico mb-2">Personal Service</h3>
          <p class="text-gray-600">Direct communication with dedicated support</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto text-center section-padding">
      <h2 class="text-3xl font-bold font-quantico text-gray-800 mb-4">Ready to Get Started?</h2>
      <p class="text-lg text-gray-600 mb-8">
        Let's bring your vision to life with professional design services.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Link href="/contact" class="btn-primary inline-block"> Get a Quote </Link>
        <Link href="/portfolio" class="btn-secondary inline-block"> View Portfolio </Link>
      </div>
    </div>
  </section>
</MainLayout>