  <!-- Custom styles for filters and lightbox -->
  <style>
    /* Filter buttons styling */
    .filter-btn {
      transition: all 0.3s ease;
    }
    
    .filter-btn.active {
      background-color: #ffee00;
      color: #000;
    }
    
    /* Portfolio item animation */
    .portfolio-item {
      transition: all 0.4s ease;
      opacity: 1;
      transform: scale(1);
    }
    
    .portfolio-item.hidden {
      opacity: 0;
      transform: scale(0.8);
      position: absolute;
      pointer-events: none;
    }
    
    /* Category badge */
    .category-badge {
      position: absolute;
      top: 10px;
      right: 10px;
      background: rgba(0, 0, 0, 0.8);
      color: #ffee00;
      padding: 4px 12px;
      border-radius: 4px;
      font-size: 12px;
      font-weight: bold;
      opacity: 0;
      transition: opacity 0.3s;
    }
    
    .portfolio-item:hover .category-badge {
      opacity: 1;
    }
    
    /* Lightbox styling */
    .lightbox {
      display: none;
      position: fixed;
      z-index: 999;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.95);
      overflow: auto;
    }

    .lightbox-content {
      display: block;
      margin: auto;
      max-width: 90%;
      max-height: 90vh;
      object-fit: contain;
    }

    .lightbox-close {
      position: absolute;
      top: 20px;
      right: 40px;
      color: #fff;
      font-size: 40px;
      font-weight: bold;
      cursor: pointer;
      transition: color 0.3s;
    }

    .lightbox-close:hover {
      color: #ffee00;
    }
  </style>

