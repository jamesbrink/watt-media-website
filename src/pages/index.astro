---
import MainLayout from '../layouts/MainLayout.astro';
import Image from '../components/Image.astro';
import Link from '../components/Link.astro';
import { offersEnabled } from '../data/offers';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Watt Media",
  "description": "Professional graphic design and multimedia services in Bass Coast, Victoria",
  "url": "https://wattmedia.au",
  "logo": "https://wattmedia.au/images/watt-media-logo.png",
  "image": "https://wattmedia.au/images/watt-media-logo.png",
  "email": "PhillipWatt@wattmedia.au",
  "address": {
    "@type": "PostalAddress",
    "addressRegion": "VIC",
    "addressCountry": "AU",
    "addressLocality": "Bass Coast"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": -38.6089,
    "longitude": 145.5913
  },
  "areaServed": [
    {
      "@type": "City",
      "name": "Wonthaggi"
    },
    {
      "@type": "City",
      "name": "Inverloch"
    },
    {
      "@type": "City",
      "name": "Cowes"
    },
    {
      "@type": "City",
      "name": "San Remo"
    },
    {
      "@type": "State",
      "name": "Victoria"
    }
  ],
  "priceRange": "$$",
  "openingHours": "Mo-Fr 09:00-17:00",
  "sameAs": [],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Design Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Logo Design",
          "description": "Professional logo design services"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Branding & Identity",
          "description": "Complete brand identity packages"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Print Design",
          "description": "Brochures, flyers, business cards, and marketing materials"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Social Media Design",
          "description": "Custom graphics for social media platforms"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Photography & Video",
          "description": "Professional photography and video production"
        }
      }
    ]
  }
};
---

<MainLayout
  title="Watt Media - Graphic Design & Multimedia Services | Bass Coast, Victoria"
  description="Professional graphic design and multimedia services in Bass Coast, Victoria. Logo design, branding, print materials, social media graphics, photography, and video production. Serving Wonthaggi, Inverloch, Cowes, and surrounding areas."
  keywords="graphic design Bass Coast, logo design Wonthaggi, branding Inverloch, print design Cowes, social media graphics Victoria, photography Bass Coast, video production Gippsland, multimedia services San Remo"
  canonical="https://wattmedia.au/"
  structuredData={structuredData}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-watt-yellow via-yellow-300 to-yellow-200 py-20">
    <div class="max-w-7xl mx-auto section-padding">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="text-center md:text-left">
          <h2 class="text-4xl md:text-5xl font-bold font-quantico text-gray-800 mb-6">
            Graphic Design & Multimedia Excellence
          </h2>
          <p class="text-lg text-gray-700 mb-8 leading-relaxed">
            Watt Media offers comprehensive graphic design and multimedia services including Logo
            Design, Brand Identity, Business Cards, Brochures, Social Media Graphics, Print
            Design, Photo Editing, Video Production, and Audio Production in the Bass Coast region
            of Victoria, Australia.
          </p>
          <p class="text-xl font-semibold text-gray-800 mb-8">
            We help your business thrive in the print and online world.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
            <Link href="/contact" class="btn-primary inline-block text-center">
              Get Started Today
            </Link>
            <Link href="/portfolio" class="btn-secondary inline-block text-center">
              View Our Work
            </Link>
          </div>
        </div>
        <div class="flex justify-center md:justify-end">
          <div class="bg-white p-8 rounded-2xl shadow-2xl">
            <Image
              src="/images/watt-media-logo.png"
              alt="Watt Media Logo"
              class="w-64 h-64 object-contain"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  {offersEnabled && (
    <section class="bg-gray-900 text-white py-10">
      <div class="max-w-6xl mx-auto section-padding flex flex-col md:flex-row items-center justify-between gap-6">
        <div>
          <h3 class="text-2xl font-bold font-quantico mb-2">Season's Greetings Offer</h3>
          <p class="text-sm text-gray-200">
            We are sharing seasonal savings with every printed holiday card. Enter your code online
            to preview adjusted pricing before you book.
          </p>
        </div>
        <Link href="/seasonal-offer" class="btn-secondary inline-flex items-center justify-center">
          Redeem the Offer -&gt;
        </Link>
      </div>
    </section>
  )}

  <!-- Services Preview -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto section-padding">
      <h2 class="text-3xl md:text-4xl font-bold font-quantico text-center text-gray-800 mb-12">
        Our Services
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <Link href="/branding-identity" class="card hover:transform hover:-translate-y-2 transition-all duration-300 block">
          <div class="text-watt-yellow mb-4">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico mb-3">Branding & Identity</h3>
          <p class="text-gray-600">
            Professional logo design and complete brand identity packages to make your business
            stand out.
          </p>
        </Link>
        <Link href="/print-marketing-design" class="card hover:transform hover:-translate-y-2 transition-all duration-300 block">
          <div class="text-watt-yellow mb-4">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico mb-3">Print & Marketing</h3>
          <p class="text-gray-600">
            Eye-catching brochures, flyers, and marketing materials that drive results.
          </p>
        </Link>
        <Link href="/visual-content-creation" class="card hover:transform hover:-translate-y-2 transition-all duration-300 block">
          <div class="text-watt-yellow mb-4">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico mb-3">Digital Content</h3>
          <p class="text-gray-600">
            Social media graphics, video production, and digital content that engages your
            audience.
          </p>
        </Link>
      </div>
      <div class="text-center mt-12">
        <Link href="/services" class="btn-primary inline-block"> Explore All Services </Link>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gray-100">
    <div class="max-w-4xl mx-auto text-center section-padding">
      <h2 class="text-3xl font-bold font-quantico text-gray-800 mb-4">
        Ready to Elevate Your Brand?
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        Get in touch today and let's discuss how we can help your business succeed.
      </p>
      <Link href="/contact" class="btn-primary inline-block text-lg"> Contact Us Now </Link>
    </div>
  </section>
</MainLayout>
