---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout
  title="Contact Watt Media | Graphic Design Bass Coast Victoria"
  description="Contact Watt Media for professional graphic design services in Bass Coast, Victoria. Email PhillipWatt@wattmedia.au for logo design, branding, print materials, and multimedia services in Wonthaggi, Inverloch, Cowes."
  keywords="contact graphic designer Bass Coast, email Watt Media, graphic design enquiry Wonthaggi, design services contact Inverloch"
>
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-watt-yellow to-yellow-300 py-16">
    <div class="max-w-7xl mx-auto section-padding text-center">
      <h1 class="text-4xl md:text-5xl font-bold font-quantico text-gray-800 mb-4">
        Get in Touch
      </h1>
      <p class="text-xl text-gray-700 max-w-3xl mx-auto">
        Let's discuss how we can help your business succeed
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto section-padding">
      <!-- Email CTA Section -->
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-3xl font-bold font-quantico text-gray-800 mb-6">
          Ready to Start Your Project?
        </h2>
        <p class="text-lg text-gray-600 mb-8">
          Drop us an email and let's discuss how we can bring your vision to life.
        </p>
        
        <div class="bg-gradient-to-r from-watt-yellow to-yellow-300 rounded-2xl p-8 shadow-lg">
          <a href="mailto:PhillipWatt@wattmedia.au" class="group inline-block">
            <div class="bg-white rounded-xl p-6 shadow-md transform transition-transform group-hover:scale-105">
              <svg class="w-12 h-12 text-watt-yellow mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <p class="text-2xl font-bold font-quantico text-gray-800 group-hover:text-watt-yellow transition-colors">
                PhillipWatt@wattmedia.au
              </p>
            </div>
          </a>
        </div>
      </div>

      <!-- Info Grid -->
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <!-- Response Time -->
        <div class="text-center">
          <div class="bg-gray-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-watt-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico text-gray-800 mb-2">Quick Response</h3>
          <p class="text-gray-600">We'll get back to you within 24 hours</p>
        </div>

        <!-- Location -->
        <div class="text-center">
          <div class="bg-gray-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-watt-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico text-gray-800 mb-2">Bass Coast Based</h3>
          <p class="text-gray-600">Serving all of Victoria & Australia</p>
        </div>

        <!-- Services -->
        <div class="text-center">
          <div class="bg-gray-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-watt-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico text-gray-800 mb-2">Full Service</h3>
          <p class="text-gray-600">From concept to completion</p>
        </div>
      </div>

      <!-- Process Section -->
      <div class="bg-gray-50 rounded-2xl p-8 md:p-12">
        <h3 class="text-2xl font-bold font-quantico text-gray-800 mb-8 text-center">
          How We Work Together
        </h3>
        <div class="grid md:grid-cols-4 gap-6">
          <!-- Step 1 -->
          <div class="text-center">
            <div class="bg-watt-yellow text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4 font-bold text-xl">
              1
            </div>
            <h4 class="font-bold font-quantico text-gray-800 mb-2">Reach Out</h4>
            <p class="text-sm text-gray-600">Send us an email about your project</p>
          </div>
          
          <!-- Step 2 -->
          <div class="text-center">
            <div class="bg-watt-yellow text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4 font-bold text-xl">
              2
            </div>
            <h4 class="font-bold font-quantico text-gray-800 mb-2">Discuss</h4>
            <p class="text-sm text-gray-600">We'll chat about your needs and goals</p>
          </div>
          
          <!-- Step 3 -->
          <div class="text-center">
            <div class="bg-watt-yellow text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4 font-bold text-xl">
              3
            </div>
            <h4 class="font-bold font-quantico text-gray-800 mb-2">Quote</h4>
            <p class="text-sm text-gray-600">Receive a tailored proposal</p>
          </div>
          
          <!-- Step 4 -->
          <div class="text-center">
            <div class="bg-watt-yellow text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-4 font-bold text-xl">
              4
            </div>
            <h4 class="font-bold font-quantico text-gray-800 mb-2">Create</h4>
            <p class="text-sm text-gray-600">We bring your vision to life</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gray-100">
    <div class="max-w-4xl mx-auto text-center section-padding">
      <h2 class="text-3xl font-bold font-quantico text-gray-800 mb-4">Ready to Get Started?</h2>
      <p class="text-lg text-gray-600 mb-8">
        We're excited to hear about your project and help bring your ideas to life.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/services" class="btn-primary inline-block"> View Our Services </a>
        <a href="/portfolio" class="btn-secondary inline-block"> See Our Work </a>
      </div>
    </div>
  </section>
</MainLayout>