---
import MainLayout from '../layouts/MainLayout.astro';
import Link from '../components/Link.astro';
---

<MainLayout
  title="About - Watt Media"
  description="Professional Graphic Design & Multimedia Services"
  keywords="about Watt Media, graphic designer Bass Coast, Phillip Watt, design services Victoria"
>
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-watt-yellow to-yellow-300 py-16">
    <div class="max-w-7xl mx-auto section-padding text-center">
      <h1 class="text-4xl md:text-5xl font-bold font-quantico text-gray-800 mb-4">
        About Watt Media
      </h1>
      <p class="text-xl text-gray-700 max-w-3xl mx-auto">
        Professional Graphic Design & Multimedia Services
      </p>
    </div>
  </section>

  <!-- About Content -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto section-padding">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="order-2 md:order-1">
          <h2 class="text-3xl font-bold font-quantico text-gray-800 mb-6">Meet Phillip Watt</h2>
          <p class="text-lg text-gray-600 mb-6 leading-relaxed">
            Phillip Watt, Owner of Watt Media, brings years of experience and passion to every
            project. Based in the beautiful Bass Coast region of Victoria, Australia, Watt Media
            has been helping businesses thrive through exceptional design and multimedia services.
          </p>
          <p class="text-lg text-gray-600 mb-6 leading-relaxed">
            We offer comprehensive graphic design and multimedia services including Logo Design,
            Brand Identity Design, Business Card Design, Brochure and Flyer Design, Social Media
            Graphics, Print Design, Photo Editing and Retouching, Video Production, Social Media
            Content, Photography and Audio Production.
          </p>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            Our mission is simple: to provide professional, creative solutions that help your
            business stand out and succeed in today's competitive market.
          </p>
          <Link href="/contact" class="btn-primary inline-block"> Get in Touch Today </Link>
        </div>
        <div class="order-1 md:order-2">
          <div class="relative">
            <div class="absolute -inset-4 bg-watt-yellow rounded-2xl opacity-20"></div>
            <img
              src="/images/Headshot.jpg"
              alt="Phillip Watt, Owner of Watt Media"
              class="relative rounded-2xl shadow-xl w-full max-w-md mx-auto"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-20 bg-gray-100">
    <div class="max-w-7xl mx-auto section-padding">
      <h2 class="text-3xl md:text-4xl font-bold font-quantico text-center text-gray-800 mb-12">
        Our Core Values
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="card text-center">
          <div
            class="bg-watt-yellow rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4"
          >
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico mb-3">Creativity</h3>
          <p class="text-gray-600">
            Innovative solutions that capture attention and inspire action.
          </p>
        </div>
        <div class="card text-center">
          <div
            class="bg-watt-yellow rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4"
          >
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico mb-3">Collaboration</h3>
          <p class="text-gray-600">Working closely with clients to bring their vision to life.</p>
        </div>
        <div class="card text-center">
          <div
            class="bg-watt-yellow rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4"
          >
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold font-quantico mb-3">Excellence</h3>
          <p class="text-gray-600">Delivering high-quality work that exceeds expectations.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto text-center section-padding">
      <h2 class="text-3xl font-bold font-quantico text-gray-800 mb-4">Ready to Work Together?</h2>
      <p class="text-lg text-gray-600 mb-8">Let's create something amazing for your business.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Link href="/services" class="btn-primary inline-block"> View Our Services </Link>
        <Link href="/portfolio" class="btn-secondary inline-block"> See Our Work </Link>
      </div>
    </div>
  </section>
</MainLayout>