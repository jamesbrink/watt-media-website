---
import MainLayout from '../layouts/MainLayout.astro';
import Link from '../components/Link.astro';
import Image from '../components/Image.astro';
---

<MainLayout
  title="Print & Marketing Design - Watt Media"
  description="Professional print materials that leave a lasting impression"
  keywords="print design, marketing design, brochures, flyers, business cards, stationery, banners, signage"
>
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-watt-yellow to-yellow-300 py-16">
    <div class="max-w-7xl mx-auto section-padding text-center">
      <h1 class="text-4xl md:text-5xl font-bold font-quantico text-gray-800 mb-4">
        Print & Marketing Design
      </h1>
      <p class="text-xl text-gray-700 max-w-3xl mx-auto">
        Professional print materials that leave a lasting impression
      </p>
    </div>
  </section>

  <!-- Service Content -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto section-padding">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Content -->
        <div>
          <div class="prose prose-lg max-w-none">
            <p class="text-lg text-gray-600 mb-8">
              We offer the following services in Print & Marketing Design:
            </p>
          </div>

          <!-- Brochure & Flyer Design -->
          <div class="service-detail-card mb-8">
            <div class="flex items-start">
              <div class="bg-watt-yellow rounded-lg p-3 mr-4">
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  ></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold font-quantico text-gray-800 mb-3">
                  Brochure & Flyer Design
                </h3>
                <p class="text-gray-600 mb-4">
                  Need a brochure or a flyer? We can help design the perfect brochure or flyer so
                  you can help attract customers, keep them informed and let them know what goods
                  and/or services you offer.
                </p>
                <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                  <div class="flex justify-between items-center">
                    <span class="font-semibold">Basic Flyer (1 page)</span>
                    <span class="text-xl font-bold text-gray-800">$165 AUD (including GST)</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="font-semibold">Basic Brochure (2-4 pages)</span>
                    <span class="text-xl font-bold text-gray-800">$330 AUD (including GST)</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="font-semibold">Advanced Flyer</span>
                    <span class="text-xl font-bold text-gray-800">$385 AUD (including GST)</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="font-semibold">Advanced Brochure (5+ pages)</span>
                    <span class="text-xl font-bold text-gray-800">$660 AUD (including GST)</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Print Design -->
          <div class="service-detail-card mb-8">
            <div class="flex items-start">
              <div class="bg-watt-yellow rounded-lg p-3 mr-4">
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"
                  ></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold font-quantico text-gray-800 mb-3">Print Design</h3>
                <p class="text-gray-600 mb-4">
                  Need a Poster, Stationery, Presentation Folder, Invitation, Banners and Signage,
                  Postcard or Thank You Card? We can design all these for your business, or any
                  other Print Design needs you may have.
                </p>
                <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                  <div class="flex justify-between items-center">
                    <span class="font-semibold">Flyer / Poster (Single-sided)</span>
                    <span class="text-xl font-bold text-gray-800">$165 AUD (including GST)</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="font-semibold">Brochure (Bi-fold or Tri-fold)</span>
                    <span class="text-xl font-bold text-gray-800">$220-$330 AUD (including GST)</span>
                  </div>
                  <div class="flex justify-between items-center">
                    <span class="font-semibold">Menu / Price List Design</span>
                    <span class="text-xl font-bold text-gray-800">$165-$275 AUD (including GST)</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Additional Services -->
          <div class="bg-gray-100 rounded-xl p-6 mb-8">
            <h4 class="text-lg font-bold font-quantico text-gray-800 mb-4">Also Available:</h4>
            <div class="grid grid-cols-2 gap-3">
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>Stationery</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>Presentation Folders</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>Invitations</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>Banners & Signage</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>Postcards</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
                <span>Thank You Cards</span>
              </div>
            </div>
          </div>

          <!-- CTA -->
          <div class="bg-gray-100 rounded-xl p-8 text-center">
            <p class="text-lg text-gray-700 mb-6">
              Get in touch with us today to see how we can help your business.
            </p>
            <Link href="/contact" class="btn-primary inline-block"> Start Your Print Project </Link>
          </div>
        </div>

        <!-- Image -->
        <div class="lg:sticky lg:top-28">
          <div class="bg-white rounded-2xl shadow-xl p-8">
            <Image
              src="/images/print-marketing-design-website-image.svg"
              alt="Print and Marketing Design Services"
              class="w-full h-auto"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Services -->
  <section class="py-16 bg-gray-100">
    <div class="max-w-7xl mx-auto section-padding">
      <h2 class="text-3xl font-bold font-quantico text-center text-gray-800 mb-12">
        Related Services
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <Link href="/branding-identity" class="card hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-bold font-quantico mb-3">Branding & Identity</h3>
          <p class="text-gray-600">Build a strong brand that stands out</p>
        </Link>
        <Link href="/social-media-design" class="card hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-bold font-quantico mb-3">Social Media Design</h3>
          <p class="text-gray-600">Engaging graphics for your social presence</p>
        </Link>
        <Link href="/visual-content-creation" class="card hover:shadow-xl transition-shadow">
          <h3 class="text-xl font-bold font-quantico mb-3">Visual Content Creation</h3>
          <p class="text-gray-600">Stunning visuals that tell your story</p>
        </Link>
      </div>
    </div>
  </section>
</MainLayout>